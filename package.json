{
  "name": "openclaw-avatar",
  "version": "1.0.0",
  "description": "Interactive AI avatar frontend for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "openclaw-avatar": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && vite build",
    "build:server": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:client": "vite",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openclaw",
    "avatar",
    "ai",
    "simli",
    "elevenlabs",
    "tts",
    "voice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.0",
    "express": "^5.2.1",
    "simli-client": "latest",
    "ws": "^8.19.0"
  },
  "optionalDependencies": {
    "@elgato-stream-deck/node": "^7.5.2",
    "canvas": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^5"
  },
  "files": [
    "dist",
    "public",
    "skills",
    "openclaw.plugin.json",
    "avatar.config.example.json",
    ".env.example"
  ],
  "engines": {
    "node": ">=18"
  }
}
